<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="app.com.example.shahed.incomeexpensetracker.HomeActivity">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff6a1b9a"
        android:fitsSystemWindows="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_margin="16dp">

        <Button
            android:id="@+id/add_to_income_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add to Income"
            android:textAllCaps="false"
            android:layout_margin="8dp"
            android:onClick="addToIncomeButtonClicked"
            android:background="#ff6a1b9a" />

        <Button
            android:id="@+id/add_to_expense_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add to Expense"
            android:textAllCaps="false"
            android:layout_margin="8dp"
            android:onClick="addToExpenseButtonClicked"
            android:background="#ff6a1b9a" />
        <Button
            android:id="@+id/report_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Report"
            android:textAllCaps="false"
            android:layout_margin="8dp"
            android:onClick="reportButtonClicked"
            android:background="#ff6a1b9a" />
        <Button
            android:id="@+id/logout_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Log Out"
            android:textAllCaps="false"
            android:layout_margin="8dp"
            android:onClick="logOutButtonClicked"
            android:background="#ff6a1b9a" />

    </LinearLayout>
</LinearLayout>